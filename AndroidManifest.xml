<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ruzulive.androidapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ruzulive.androidapp.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ruzulive.androidapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.ruzulive.androidapp.MAINACT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ruzulive.androidapp.Menu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.ruzulive.androidapp.MENU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ruzulive.androidapp.TextPlay"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.ruzulive.androidapp.Email"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>